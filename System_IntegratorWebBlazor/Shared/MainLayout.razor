@inherits LayoutComponentBase

<MApp>
    <MAppBar App Elevation="0" Height="100" Class="default-app-bar mx-6">
           <div class="default-app-bar__actions page-mode--breadcrumb">
                    <MSpacer />
                    <MIcon Size=20 Class="ml-5" Color="neutral-lighten-3">mdi-message-processing-outline</MIcon>
                    <MIcon Size=20 Class="ml-5" Color="neutral-lighten-3" OnClick="() => _showSetting = true">mdi-cog-outline</MIcon>
                </div>
        <div class="default-app-bar__nav page-mode--breadcrumb">
                        <Breadcrumb />
                </div>
        <MSpacer></MSpacer>
        <MButton Text Color="primary" Target="_blank" Href="https://docs.masastack.com/blazor/introduction/why-masa-blazor">About</MButton>
    </MAppBar>

            <Navigation />



    <MMain Class="fill-lighten-1">
        <MContainer Fluid>
            <MErrorHandler>
                @Body
            </MErrorHandler>
        </MContainer>
    </MMain>
    <Settings  @bind-Show=_showSetting />
</MApp>

@code {
    private bool? _showSetting;




}
